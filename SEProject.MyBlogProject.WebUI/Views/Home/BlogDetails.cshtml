@model BlogListModel
@{
    ViewData["Title"] = Model.Title;
    var comments = (List<CommentListModel>)ViewBag.Comments;

    void GetComments(List<CommentListModel> comments)
    {
        if (comments.Count > 0)
        {
            foreach (var comment in comments)
            {
                <div class="media mt-4">
                    <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                    <div class="media-body">
                        <h5 class="mt-0">@comment.AuthorName</h5>
                        @comment.Description

                        <button type="button" class="btn btn-sm btn-outline-primary float-right">Cevapla</button>

                        @{ 
                            GetComments(comment.SubComments);
                        }
                    </div>
                </div>
            }
        }
    }
}

<!-- Title -->
<h1 class="mt-4">@Model.Title</h1>

<!-- Author -->
@*<p class="lead">
        by
        <a href="#">Start Bootstrap</a>
    </p>*@

<hr>

<!-- Date/Time -->
<p>Posted on @Model.PostedTime.ToLongDateString()</p>

<hr>

<!-- Preview Image -->
<getblogimage id="@Model.Id" class-name="img-fluid rounded"></getblogimage>

<hr>

<!-- Post Content -->
<div class="lead">
    @Html.Raw(Model.Description)
</div>

<hr>

<!-- Comments Form -->
<div class="card my-4">
    <h5 class="card-header">Leave a Comment:</h5>
    <div class="card-body">
        <form>
            <div class="form-group">
                <textarea class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<!-- Comment with nested comments -->
@{ 
    GetComments(comments);
}