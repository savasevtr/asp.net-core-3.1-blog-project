@model List<CategoryWithBlogsCountModel>

<div class="card my-4">
    <h5 class="card-header">Categories</h5>
    <div class="list-group">
        @foreach (var item in Model)
        {
            <a class="list-group-item d-flex justify-content-between align-items-center @(ViewBag.ActiveCategory?.ToString() == item.CategoryId.ToString() ? "active" : "")" asp-action="Index" asp-route-categoryId="@item.CategoryId">
                @item.CategoryName
                <span class="badge badge-primary badge-pill">@item.BlogsCount</span>
            </a>
        }
    </div>
</div>