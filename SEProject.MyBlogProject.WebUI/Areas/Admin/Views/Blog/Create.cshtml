@model BlogAddModel
@{
    ViewData["Title"] = "Blog Ekle";
}

<h1 class="mt-4">Blog Ekle</h1>

<form asp-area="Admin" asp-controller="Blog" asp-action="Create" method="post" class="p-3" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="Title"></label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ShortDescription"></label>
        <input type="text" asp-for="ShortDescription" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input type="file" class="form-control-file" asp-for="Image" />
    </div>

    <button type="submit" class="btn btn-outline-success btn-sm">Kaydet</button>

</form>