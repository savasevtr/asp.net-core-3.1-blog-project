@model CategoryAddModel
@{
    ViewData["Title"] = "Yeni Kategori";
}

<h4 class="mt-4">Yeni Kategori</h4>

<form asp-area="Admin" asp-controller="Category" asp-action="Create" method="post" class="p-3">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <button type="submit" class="btn btn-outline-success btn-sm">Kaydet</button>

</form>